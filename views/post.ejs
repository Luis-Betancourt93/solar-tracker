<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-lg px-4 md:px-8 mx-auto">
    <div class="grid md:grid-cols-2 gap-8">
      <!-- images - start -->
      <div class="space-y-4">
        <div class="bg-gray-100 rounded-lg overflow-hidden relative">
          <img src="<%= post.image%>" loading="lazy" alt="Photo by Himanshu Dewangan" class="w-full h-full object-cover object-center" />

          
        </div>
      </div>
      <!-- images - end -->

      <!-- content - start -->
      <div class="">
        
        <div class="mb-2 md:mb-3">
          
          <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold"><%= post.title %></h2>
        </div>
       

    
        <div class=" md:mt-16 lg:mt-20">
          <div class="text-gray-800 text-lg font-semibold mb-3">Notes:</div>

          <p class="text-gray-500"> <%= post.notes %> </p>
          <p>Phase: <%= post.phase %></p>
          <p>Lot #: <%= post.lot %></p>
        </div>

        <div class="flex gap-2.5 mt-4">
          <!-- <a href="#" class="inline-block flex-1 sm:flex-none bg-solar hover:bg-orange-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3">Delete</a> -->

          <%if(post.user == user.id){ %>
            <form
              action="/post/deletePost/<%= post.id %>?_method=DELETE"
              method="POST"
              class="col-3"
            >
              <button class="inline-block flex-1 sm:flex-none bg-solar hover:bg-orange-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" type="submit">Delete</button>
            </form>
            <%}%>

          <a href="/feed" class="inline-block flex-1 sm:flex-none bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3">Return to Feed</a>

          
        </div>
      
      </div>
    
    </div>
  </div>
</div>












