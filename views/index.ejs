
<%- include('partials/header') -%>


  <div class="h-screen  bg-[url('../../imgs/solar.jpg')] bg-auto bg-center flex justify-center items-center" >

  <div class="max-w-screen-2xl  px-4 md:px-8 mx-auto rounded-lg bg-gray-500 bg-opacity-50 py-5">



    <h2 class=" underline text-white text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">Login</h2>
    <section class="col-6 mt-5 ">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>

        <form action="/login" method="POST" class="max-w-lg border rounded-lg mx-auto">
            <div class="flex flex-col gap-4 p-4 md:p-8">
                <div>
                <label for="exampleInputEmail1"  class="inline-block text-gray-800 text-sm sm:text-base mb-2">Email</label>
                <input type="email" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" />
                </div>

                <div>
                <label for="exampleInputPassword1" class="inline-block text-gray-800 text-sm sm:text-base mb-2">Password</label>
                <input type="password" id="exampleInputPassword1" name="password" class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" />
                </div>

                <button type="submit" class="block bg-solar hover:bg-orange-400 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3">Log in</button>

            </div>

            <div class="flex justify-center items-center bg-gray-100 p-4">
                <p class="text-gray-500 text-sm text-center">Don't have an account? <a href="/signup" class="text-indigo-500 hover:text-indigo-600 active:text-indigo-700 transition duration-100">Register</a></p>
            </div>
        </form>
    </section>
  </div>
</div>

        


<%- include('partials/footer') -%>


