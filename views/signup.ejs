
<%- include('partials/header') -%>

<div class="h-screen  bg-[url('../../imgs/solar.jpg')] bg-auto bg-center flex justify-center items-center" >

<section class="">
  <% if (locals.messages.errors) { %>
      <% messages.errors.forEach( el => { %>
          <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %>    
  <% } %>
  <% if (locals.messages.info) { %>
      <% messages.info.forEach( el => { %>
          <div class="alert alert-info"><%= el.msg %></div>
      <% }) %>    
  <% } %>

  <div class="h-screen  bg-[url('../../imgs/solar.png')] bg-auto bg-center flex justify-center items-center">


  <div class="rounded-lg bg-gray-500 bg-opacity-50 py-6 sm:py-8 lg:py-12">
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">

      <h1 class=" underline pt-4 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8 hover:text-orange-500"><a href="/profile">Solar System Tracker</a></h1>

      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">Sign Up</h2>
  
      <form action="/signup" method="POST" class="max-w-lg border rounded-lg mx-auto">
        <div class="flex flex-col gap-4 p-4 md:p-8">
          <div>
            <label for="userName" class="inline-block text-gray-800 text-sm sm:text-base mb-2">User Name</label>
            <input type="text" id="userName" name="userName" class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" />
          </div>
  
          <div>
            <label for="exampleInputEmail1" class="inline-block text-gray-800 text-sm sm:text-base mb-2">Email address</label>
            <input type="email" aria-describedby="emailHelp" name="email" id="exampleInputEmail1" class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" />
          </div>

          <div>
            <label for="password" class="inline-block text-gray-800 text-sm sm:text-base mb-2">Password</label>
            <input type="password" name="password" id="password" class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" />
          </div>

          <div>
            <label for="confirmPassword" class="inline-block text-gray-800 text-sm sm:text-base mb-2">Confirm Password</label>
            <input name="confirmPassword" id="confirmPassword" type="password" class="w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" />
          </div>
  
          <button type="submit" class="block bg-solar hover:bg-orange-400 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3">Submit</button>

        </div>

      </form>
    </div>
  </div>   
</section>

</div>
            

<%- include('partials/footer') -%>

</div>